<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.royce.thoughtworks.fragment.AddReminder">

    <EditText
        android:id="@+id/add_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Train number"
        android:imeOptions="actionNext"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/add_station_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_number"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:ems="10"
        android:hint="Station code"
        android:imeOptions="actionNext"></EditText>

    <Spinner
        android:id="@+id/add_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_station_code"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/add_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_bg_blue"
        android:padding="6dp"
        android:text="Add Reminder"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
